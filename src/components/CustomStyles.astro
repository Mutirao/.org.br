---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Paleta do Briefing - Instituto Mutirão */
    --aw-color-primary: rgb(255 107 53);      /* Laranja Vibrante #FF6B35 - Energia, transformação */
    --aw-color-secondary: rgb(45 66 99);      /* Azul Profundo #2D4263 - Tecnologia, confiabilidade */
    --aw-color-accent: rgb(71 168 98);        /* Verde Esperança #47A862 - Crescimento, sustentabilidade */
    --aw-color-highlight: rgb(255 200 87);    /* Amarelo Acolhedor #FFC857 - Otimismo, acessibilidade */

    /* Cores de diversidade (uso em destaques) */
    --aw-color-purple: rgb(139 95 191);       /* Roxo Identitário #8B5FBF */
    --aw-color-magenta: rgb(216 71 151);      /* Magenta Vivo #D84797 */
    --aw-color-turquoise: rgb(31 181 180);    /* Turquesa Cultural #1FB5B4 */
    --aw-color-terra: rgb(200 117 51);        /* Terra/Ocre #C87533 */

    --aw-color-text-heading: rgb(44 44 44);   /* Cinza Escuro #2C2C2C */
    --aw-color-text-default: rgb(44 44 44);   /* Cinza Escuro #2C2C2C */
    --aw-color-text-muted: rgb(107 107 107);  /* Cinza Médio #6B6B6B */
    --aw-color-bg-page: rgb(248 248 248);     /* Off-white #F8F8F8 */

    --aw-color-bg-page-dark: rgb(45 66 99);

    ::selection {
      background-color: rgb(255 200 87);      /* Amarelo Acolhedor */
      color: rgb(44 44 44);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Modo escuro - cores ajustadas para contraste */
    --aw-color-primary: rgb(255 140 100);     /* Laranja mais claro */
    --aw-color-secondary: rgb(100 140 200);   /* Azul mais claro */
    --aw-color-accent: rgb(100 200 130);      /* Verde mais claro */
    --aw-color-highlight: rgb(255 215 120);   /* Amarelo mais claro */

    --aw-color-purple: rgb(160 130 210);
    --aw-color-magenta: rgb(230 110 180);
    --aw-color-turquoise: rgb(80 210 210);
    --aw-color-terra: rgb(220 150 100);

    --aw-color-text-heading: rgb(248 248 248);
    --aw-color-text-default: rgb(229 229 229);
    --aw-color-text-muted: rgb(180 180 180);
    --aw-color-bg-page: rgb(30 40 60);

    ::selection {
      background-color: rgb(255 107 53);
      color: rgb(248 248 248);
    }
  }
</style>
